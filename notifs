. $HOME/bin/cmusbar
dir=$HOME/bin

  battery() {
    $dir/battnotif
  }
  inform() {
    $dir/ministat
  }
  time() {
    popper 'î€– ' $(date  +'%R'), $(date +' %b %d')
  }
  music() {
    if [ -z "$ARTIST" ]; then
      exit 0
    else 
      popmusic %{c} $(cmusbar)
    fi
    #$dir/nowPlaying
  }

sleep 5s && music
sleep 40s && battery
sleep 60s && inform 
sleep 120s && time 
